<style>
  .container-content {
    max-width: 350px;
    text-wrap: nowrap;
    margin: 0;
    padding: 10px 15px;
  }

  .container-content {
    position: absolute;
    top: -15;
    right: 0;
    z-index: 1000;
    width: 300px;
  }
</style>
<!-- error message -->
<% if (success_msg) { %>
  <% success_msg.forEach(function(msg) { %>
    <div class=" container-content alert text-white bg-success font-size-14" role="alert">
      <div class="iq-alert-text">
        <%= msg %>
      </div>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <i class="ri-close-line"></i>
      </button>
    </div>
    <% }) %>
      <% } %>

        <!-- error message -->
        <% if (error_msg) { %>
          <% error_msg.forEach(function(msg) { %>
            <div class="container-content alert text-white bg-warning font-size-14" role="alert">
              <div class="iq-alert-text">
                <%= msg %>
              </div>
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <i class="ri-close-line"></i>
              </button>
            </div>
            <% }) %>
              <% } %>