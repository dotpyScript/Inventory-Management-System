<%- include('patials/head') %>
  <%- include('patials/top_navbar') %>
    <%- include('patials/side_navbar') %>

      <!-- loader Start -->
      <div id="loading">
        <div id="loading-center">
        </div>
      </div>
      <!-- loader END -->
      <!-- Wrapper Start -->
      <div class="wrapper">

        <div class="content-page">
          <div class="container-fluid">
            <div class="row">
              <div class="col-lg-12">
                <div class="d-flex flex-wrap align-items-center justify-content-between mb-4">
                  <div>
                    <h4 class="mb-3">Purchase List</h4>
                    <p class="mb-0">A purchase dashboard enables purchasing manager to efficiently track,
                      evaluate, <br>
                      and optimize all acquisition processes within a company.</p>
                  </div>
                  <a href="/users/page-add-purchase" class="btn btn-primary add-list"><i
                      class="las la-plus mr-3"></i>Add
                    Purchase</a>
                </div>
              </div>
              <div class="col-lg-12">
                <div class="table-responsive rounded mb-3">
                  <table class="data-table table mb-0 tbl-server-info">
                    <thead class="bg-white text-uppercase">
                      <tr class="ligth ligth-data">
                        <th>
                          <div class="checkbox d-inline-block">
                            <input type="checkbox" class="checkbox-input" id="checkbox1">
                            <label for="checkbox1" class="mb-0"></label>
                          </div>
                        </th>
                        <th>Date</th>
                        <th>Product Name</th>
                        <th>Brand</th>
                        <th>Supplier</th>
                        <th>Cost</th>
                        <th>Quantity</th>
                        <th>CustomId</th>
                        <th>Action</th>
                      </tr>
                    </thead>
                    <tbody class="ligth-body">
                      <% purchase.forEach((purchase)=> {%>
                        <tr>
                          <td>
                            <div class="checkbox d-inline-block">
                              <input type="checkbox" class="checkbox-input" id="checkbox2">
                              <label for="checkbox2" class="mb-0"></label>
                            </div>
                          </td>
                          <td>
                            <%= new Date(purchase.date).toLocaleDateString('en-UK', {year: 'numeric' , month: 'long' ,
                              day: 'numeric' }) %>
                          </td>
                          <td>
                            <%= purchase.productName %>
                          </td>
                          <td>
                            <%= purchase.brand %>
                          </td>
                          <td>
                            <%= purchase.supplier %>
                          </td>
                          <td>
                            <%= purchase.cost %>
                          </td>
                          <td>
                            <%= purchase.quantity%>
                          </td>
                          <td>
                            <%= purchase.customId%>
                          </td>
                          <td>

                            <div class="d-flex align-items-center list-action">

                              <a href="/users/page-add-product?productName=<%= purchase.productName %>&brand=<%= purchase.brand%>&quantity=<%= purchase.quantity %>&customId=<%= purchase.customId %>"
                                class="badge badge-warning mr-2" data-toggle="tooltip" data-placement="top"
                                title="Add to Product"><i class="ri-add-line mr-0"></i></a>

                              <a class="badge badge-info mr-2" data-toggle="tooltip" data-placement="top" title=""
                                data-original-title="View" href="#"><i class="ri-eye-line mr-0"></i></a>

                              <a class="badge bg-success mr-2" data-toggle="tooltip" data-placement="top" title=""
                                data-original-title="Edit" href="#"><i class="ri-pencil-line mr-0"></i></a>

                              <a class="badge bg-warning mr-2" data-toggle="tooltip" data-placement="top" title=""
                                data-original-title="Delete" href="#"><i class="ri-delete-bin-line mr-0"></i></a>
                            </div>
                          </td>
                        </tr>
                        <%}) %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
            <!-- Page end  -->
          </div>
          <!-- Modal Edit -->
        </div>
      </div>

      <!-- Wrapper End-->
      <%- include('patials/footer') %>
        <%- include('patials/closingtags') %>