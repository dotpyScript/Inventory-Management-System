<%- include('patials/head') %>

  <%- include('patials/side_navbar') %>
    <%- include('patials/top_navbar') %>

      <div class="wrapper">
        <div class="content-page">
          <div class="container-fluid">
            <div class="row">
              <div class="col-sm-12">
                <div class="card">
                  <div class="card-header d-flex justify-content-between">
                    <div class="header-title">
                      <h4 class="card-title">View Product</h4>
                    </div>
                  </div>
                  <div class="card-body">
                    <div class="row">
                      <div class="col-md-6">
                        <img src="<%= product.imagePath %>" class="img-fluid rounded" alt="Product Image">
                      </div>
                      <div class="col-md-6">
                        <h5>Name: <%= product.name %>
                        </h5>
                        <p>Code: <%= product.code %>
                        </p>
                        <p>Category: <%= product.category %>
                        </p>
                        <p>Price: $<%= product.price %>
                        </p>
                        <p>Cost: $<%= product.cost %>
                        </p>
                        <p>Quantity: <%= product.quantity %>
                        </p>
                        <p>Description: <%= product.description %>
                        </p>
                        <a href="/users/page-list-product" class="btn btn-primary">Back to List</a>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <%- include('patials/footer') %>
        <%- include('patials/closingtags') %>