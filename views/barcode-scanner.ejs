<%- include('patials/head') %>

  <div class="container mt-5">
    <h2>QR Code Scanner</h2>
    <button id="camera-scan-btn" class="btn btn-primary">Camera Scan</button>
    <button id="stop-scan-btn" class="btn btn-danger" style="display:none;">Stop Scan</button>
    <button id="file-scan-btn" class="btn btn-secondary">File Scan</button>
    <input type="file" id="file-input" class="mt-3" style="display:none;">
    <div id="scanner-container" class="mt-3" style="display:none;"></div>
    <div id="result" class="mt-3"></div>
    <div id="product-details" class="mt-3"></div>
    <div id="reader" style="display:none;"></div> <!-- Added for html5-qrcode -->
  </div>

  <script src="/script/html5-qrcode.min.js"></script>
  <script src="/script/quagga.min.js"></script>
  <script src="/script/barcodefunct.js"></script>
